{
  "name": "ffc-grants-eoi",
  "version": "1.2.2",
  "description": "For prototyping and technical spikes.",
  "main": "app/index.js",
  "scripts": {
    "build": "npm-run-all --serial build:css build:assets build:js",
    "build:assets": "mkdir -p app/build/ && cp -R node_modules/govuk-frontend/govuk/assets/* app/build",
    "build:js": "mkdir -p app/build/js && cp node_modules/govuk-frontend/govuk/all.js app/build/js",
    "build:css": "node-sass --output=app/build/stylesheets --output-style=expanded app/static/stylesheets",
    "test": "jest --runInBand",
    "start:watch": "npm-run-all --serial build start:nodemon",
    "start:nodemon": "nodemon --inspect=0.0.0.0 --ext js,njk --legacy-watch app/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DEFRA/ffc-grants-eoi.git"
  },
  "author": "Defra",
  "contributors": [
    "Paul Andrews <paul.andrews@defra.gov.uk>"
  ],
  "license": "OGL-UK-3.0",
  "bugs": {
    "url": "https://github.com/DEFRA/ffc-grants-eoi/issues"
  },
  "homepage": "https://github.com/DEFRA/ffc-grants-eoi#readme",
  "dependencies": {
    "@hapi/hapi": "^20.0.0",
    "@hapi/inert": "^6.0.2",
    "@hapi/vision": "^6.0.1",
    "govuk-frontend": "^3.8.1",
    "nunjucks": "^3.2.2"
  },
  "devDependencies": {
    "jest": "^26.4.0",
    "jest-junit": "^11.1.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "standard": "^14.3.4"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}
